<!-- Defining what the model is for form validations below -->
@model Quoting_Dojo.Models.Quote

@{
    ViewData["Title"] = "QuotingDojo";
}

<!-- Manual validation example -->
@if(ViewBag.Error != null){
    <b style="color:red;">@ViewBag.Error</b>
}

<h1>Welcome to QuotingDojo</h1>

<form asp-action="Quotes" asp-controller="Home" method="post">
    <div class="form-group">
        <label asp-for="author"></label>
        <span asp-validation-for="author"></span>
        <input asp-for="author" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="content">Your quote:</label>
        <span asp-validation-for="content"></span>
        <textarea asp-for="content" id="" cols="30" rows="10" class="form-control"></textarea>
    </div>
    <input type="submit" value="Add my quote!" class="button">
</form>
    <a href="/quotes"><button class="button">Skip to quotes!</button></a>

