@{
    ViewData["Title"] = "Add a Review";
}
@model RESTauranter.Models.Review

<h1>Write a new Review:</h1>
<a href="/reviews">See reviews</a>

<form method="post" asp-controller="Home" asp-action="Create">
    <div class="form-group">
        <label asp-for="reviewer"></label>
        <span asp-validation-for="reviewer"></span>
        <input class="form-control" asp-for="reviewer">
    </div>
     <div class="form-group">
        <label asp-for="restaurant"></label>
        <span asp-validation-for="restaurant"></span>
        <input class="form-control" asp-for="restaurant">
    </div>
     <div class="form-group">
        <label asp-for="rating"></label>
        <span asp-validation-for="rating"></span>
        <select class="form-control" asp-for="rating">
            @for(var i=1; i<=5; i++)
            {
                <option value="@i">@i</option>
            }
        </select>
    </div>
     <div class="form-group">
        <label asp-for="content"></label>
        <span asp-validation-for="content"></span>
        <input class="form-control" asp-for="content">
    </div>
     <div class="form-group">
        <label asp-for="date_visited"></label>
        <span asp-validation-for="date_visited"></span>
        <input class="form-control" asp-for="date_visited">
    </div>
    <input type="submit" value="Submit">
</form>